[include]
	path = ~/.gitconfig.local
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	autocrlf = input
[alias]
	st = status
	br = branch
	co = checkout
	diff = git diff --word-diff
	reb = "!r() { git rebase -i HEAD~$1; }; r"
[color]
	ui = auto
[gui]
	encoding = utf-8
[ghq]
	root = ~/repos
[difftool]
	prompt = false
